        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-titulo">
                <h1><a class="nav-titulo" href="/">Santa Cruz</a></h1>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/funcionarios">Funcionarios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/clientes">Clientes</a>
            </li>
            <th class="d-print-none">
                <a class="btn btn-sm btn-success" href="/mostrarCompras">Compras</a>
            </th>
        </ul>
    </div>
</nav>

<div class="container mt-5">
    <div class="table-responsive-sm">
        <table class="table table-striped table-sm">
            <thead class="thead-dark">
                <tr>
                    <th>ID Carro</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Ano</th>
                    <th>Preço</th>
                    <th>ID Funcionário</th>
                    
                    
                </tr>
            </thead>
            <tbody>
                <% for (const carro of dados) { %>
                    <tr>
                        <td><%= carro.idCarro %></td>
                        <td><%= carro.marca %></td>
                        <td><%= carro.modelo %></td>
                        <td><%= carro.ano %></td>
                        <td><%= carro.preco %></td>
                        <td><%= carro.idFuncionario %></td>
                        
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div> 
</div>
