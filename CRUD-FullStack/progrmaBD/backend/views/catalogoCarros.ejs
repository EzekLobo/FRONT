 <!-- Formulário para adicionar uma nova compra -->
 <div class="row mt-4">
    <div class="col-md-6 mx-auto bg-light p-4">
        <h2 class="text-center">Nova Compra</h2>
        <form method="POST" action="/adicionarCompra">
            <div class="form-group">
                <label for="idCarro">ID do Carro:</label>
                <input type="text" class="form-control" id="idCarro" name="idCarro" required>
            </div>
            <div class="form-group">
                <label for="idCliente">ID do Cliente:</label>
                <input type="text" class="form-control" id="idCliente" name="idCliente" required>
            </div>
            <div class="form-group">
                <label for="dataCompra">Data da Compra:</label>
                <input type="date" class="form-control" id="dataCompra" name="dataCompra" required>
            </div>
            <!-- Adicione outros campos conforme necessário -->
            <button type="submit" class="btn btn-success btn-block">Adicionar Compra</button>
        </form>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
