<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <title>Informações de Compra</title>
</head>

<body>

    <div class="container mt-5">
        <div class="table-responsive-sm">
            <table class="table table-striped table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>ID Compra</th>
                        <th>ID Carro</th>
                        <th>ID Cliente</th>
                        <th>Data da Compra</th>
                        <th class="d-print-none">
                            <a class="btn btn-sm btn-success" href="/inserirCompra">Nova Compra</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const compra of compras) { %>
                        <tr>
                            <td><%= compra.idCompra %></td>
                            <td><%= compra.idCarro %></td>
                            <td><%= compra.idCliente %></td>
                            <td><%= compra.dataCompra %></td>
                            <td class="d-print-none">
                                <a class="btn btn-sm btn-warning" href="/editarCompra/<%= compra.idCompra %>">Edita</a>
                                <a class="btn btn-sm btn-danger" href="/deleteCompra/<%= compra.idCompra %>">Deleta</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>

</html>
