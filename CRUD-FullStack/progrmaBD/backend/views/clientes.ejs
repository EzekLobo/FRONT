<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <title>Sua Página</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Menu</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/funcionarios">Funcionários</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/clientes">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">Carros</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="table-responsive-sm">
            <table class="table table-striped table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>ID Cliente</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Endereço</th>
                        <th>Senha</th>
                        <th class="d-print-none">
                            <a class="btn btn-sm btn-success" href="/inserirCliente">Novo registro</a>
                            <!-- Add the Catalog button here -->
                            <a class="btn btn-sm btn-primary" href="/catalogoCarros">Catálogo</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const cliente of dados) { %>
                        <tr>
                            <td><%= cliente.idCliente %></td>
                            <td><%= cliente.nome %></td>
                            <td><%= cliente.email %></td>
                            <td><%= cliente.telefone %></td>
                            <td><%= cliente.endereco %></td>
                            <td><%= cliente.senhaCli %></td>
                            <td class="d-print-none">
                                <a class="btn btn-sm btn-warning" href="/editarCliente/<%= cliente.idCliente %>">Edita</a>
                                <a class="btn btn-sm btn-danger" href="/deleteCliente/<%= cliente.idCliente %>">Deleta</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>

</html>
