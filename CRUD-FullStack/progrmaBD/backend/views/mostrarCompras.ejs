<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background: #2c3e50; /* Fundo escuro */
            color: #000000; /* Cor do texto */
        }
        .navbar {
            background: #000000; /* Cor do cabeçalho */
            
        }
        .navbar-brand span {
            font-size: 1.5rem;
            font-weight: bold;
            cursor: pointer; /* Adiciona cursor pointer para indicar que é clicável */
        }
        .navbar-item {
            margin: right;
        }
        .nav-titulo {
            color: #ffffff;
        }
        .nav-link {
            color: #ffffff !important; /* Cor do texto das opções no cabeçalho */
        }
        .car-card {
            background-color: #cbd2d8;
            margin-bottom: 20px;
            border-radius: 15px;
            box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.2);
            transition: all 0.3s linear;
        }
        .car-card:hover {
            transform: scale(1.03);
        }
        .car-card .card-body {
            padding: 15px;
        }
    </style>
    <title>Lista de Compras</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light ">
       
        <img src="logo.png" width="50px" alt="Fiat Logo">
        
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-titulo">
                <h1><a class="nav-titulo" href="/">Santa Cruz</a></h1>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/funcionarios">Funcionarios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/clientes">Clientes</a>
            </li>
            
        </ul>
    </div>
</nav>
    <div class="container mt-5">
        <div class="table-responsive-sm">
            <table class="table table-striped table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>ID Compra</th>
                        <th>ID Carro</th>
                        <th>ID Cliente</th>
                        <th>Data da Compra</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Use the correct variable name -->
                    <% for (const compra of dadosCompras) { %>
                        <tr>
                            <td><%= compra.idCompra %></td>
                            <td><%= compra.idCarro %></td>
                            <td><%= compra.idCliente %></td>
                            <td><%= compra.dataCompra %></td>
                            <td class="d-print-none">
                                <!-- Remova os botões Editar e Deletar -->
                                <!-- Adicione o botão Cancelar -->
                                <a class="btn btn-sm btn-secondary" href="/cancelar/<%= compra.idCarro %>">Cancelar</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>

</html>
